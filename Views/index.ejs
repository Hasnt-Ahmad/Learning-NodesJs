<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/index.css"> 
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <title>Hasnat | <%= title %> </title>
</head>

    

<body>
    
     <%- include('./partials/nav.ejs') %>
    
        <form>
            <table class="table">
                <thead class="thead-dark">
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Age</th>
                    <th></th>
                    <th></th>
                    
                </tr>
            </thead>
        <% if (user.length > 0) { %>
            <% user.forEach(user =>{ %>
                <tr>
                <td><%= user.firstName %></td>
                <td><%= user.lastName %></td>
                <td><%= user.Age %></td>
                <td><a href="/update/<%= user._id %>"><button type="button" class="btn btn-outline-success">Update</button></a></td>
                <td><a href="/users/<%= user._id %>"><button type="button" class="btn btn-outline-danger">Delete</button></a></td>
                
                </tr>
           <% }); %>

         
        <% } %>    
        </table>
        <a href="/add" style="margin-left:450px;border: 1px solid blue; padding:10px; padding-left:30px;padding-right:20px;" >Add</a>
    </form>
   

